{
  "ontology_template_id": "generic_business_loop_v1",
  "client_metadata": {
    "company_name": "{{COMPANY_NAME}}",
    "fde_lead": "{{FDE_NAME}}",
    "primary_objective": "Convert leads, activate customers, and focus marketing on the most profitable segment (LTV:CAC).",
    "deployment_timeline": "1-week internal launch"
  },
  "semantic_layer": {
    "object_types": [
      {
        "id": "client_account",
