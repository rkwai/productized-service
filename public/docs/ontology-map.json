          "lead_id",
          "company_name",
          "contact_name",
          "contact_email",
          "contact_title",
          "phone",
          "source",
          "stage",
          "status",
          "created_date",
          "last_contacted_at",
          "owner_team_member_id",
          "next_step_summary",
          "expected_value",
          "segment_candidate",
          "notes"
        ],
        "field_overrides": {
          "expected_value": "number"
        }
      },
      {
        "id": "deal",
