      },
      {
        "id": "milestone_supports_outcome",
        "from": "milestone",
        "to": "outcome",
        "description": "Links activation milestones directly to the outcomes they unlock."
      },
      {
        "id": "outcome_measured_by_metric",
        "from": "outcome",
